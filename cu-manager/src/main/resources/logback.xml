<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration>
<configuration>

	<appender name="console" class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<charset>UTF-8</charset>
			<Pattern>%d{HH:mm:ss.SSS} [%thread] [%L] %-5level %logger{36} - %msg%n</Pattern>
		</layout>
	</appender>

	<appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${env.HOME}/software/cloudunit/logs/application.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- daily rollover. Make sure the path matches the one in the file element or else
             the rollover logs are placed in the working directory. -->
			<fileNamePattern>${env.HOME}/software/cloudunit/logs/application_%d{yyyy-MM-dd}.%i.log</fileNamePattern>

			<timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<maxFileSize>5MB</maxFileSize>
			</timeBasedFileNamingAndTriggeringPolicy>
			<!-- keep 7 days' worth of history -->
			<maxHistory>7</maxHistory>
		</rollingPolicy>

		<encoder>
			<charset>UTF-8</charset>
			<pattern>%d %-4relative [%thread] %-5level %logger{35} - %msg%n</pattern>
		</encoder>
	</appender>

	<logger name="fr.treeptik" level="warn" />
	<logger name="fr.treeptik.cloudunit.controller" level="debug" />
	<logger name="fr.treeptik.cloudunit.controller.MessageController" level="error" />
	<logger name="fr.treeptik.cloudunit.service.impl.ApplicationServiceImpl" level="debug" />
	<logger name="org.springframework" level="info" />
	<logger name="org.springframework.security" level="info" />
	<logger name="net.sf.ehcache" level="debug" />

	<root level="info">
		<appender-ref ref="console" />
		<appender-ref ref="FILE"/>
	</root>
</configuration>